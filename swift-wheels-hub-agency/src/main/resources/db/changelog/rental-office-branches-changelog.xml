<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="create-table-branch-cars" author="George Niculae">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="swift_wheels_hub_agency" catalogName="swift_wheels_hub_agency"
                             tableName="rental_office_branches"/>
            </not>
        </preConditions>

        <createTable tableName="rental_office_branches">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rental_office_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="branch_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="rental_office_id"
                                 baseTableName="rental_office_branches"
                                 constraintName="fk_rental_office_branches_rental_office_id"
                                 referencedColumnNames="id"
                                 referencedTableName="rental_office"/>

        <addForeignKeyConstraint baseColumnNames="branch_id"
                                 baseTableName="rental_office_branches"
                                 constraintName="fk_rental_office_branches_branch_id"
                                 referencedColumnNames="id"
                                 referencedTableName="branch"/>
    </changeSet>

    <changeSet id="add-rental-office-branches-1" author="George Niculae">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM rental_office_branches
            </sqlCheck>
        </preConditions>

        <insert tableName="rental_office_branches">
            <column name="rental_office_id" value="1"/>
            <column name="branch_id" value="1"/>
        </insert>

        <insert tableName="rental_office_branches">
            <column name="rental_office_id" value="2"/>
            <column name="branch_id" value="2"/>
        </insert>
    </changeSet>
</databaseChangeLog>
