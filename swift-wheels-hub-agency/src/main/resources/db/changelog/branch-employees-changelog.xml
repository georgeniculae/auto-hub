<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="create-table-rental-office-branches" author="George Niculae">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="swift_wheels_hub_agency" catalogName="swift_wheels_hub_agency"
                             tableName="branch_employees"/>
            </not>
        </preConditions>

        <createTable tableName="branch_employees">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="branch_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="employee_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="branch_id"
                                 baseTableName="branch_employees"
                                 constraintName="fk_branch_employees_branch_id"
                                 referencedColumnNames="id"
                                 referencedTableName="branch"/>

        <addForeignKeyConstraint baseColumnNames="employee_id"
                                 baseTableName="branch_employees"
                                 constraintName="fk_branch_employees_employee_id"
                                 referencedColumnNames="id"
                                 referencedTableName="employee"/>
    </changeSet>

    <changeSet id="add-rental-office-branches-1" author="George Niculae">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM branch_employees
            </sqlCheck>
        </preConditions>

        <insert tableName="branch_employees">
            <column name="branch_id" value="1"/>
            <column name="employee_id" value="1"/>
        </insert>

        <insert tableName="branch_employees">
            <column name="branch_id" value="1"/>
            <column name="employee_id" value="2"/>
        </insert>

        <insert tableName="branch_employees">
            <column name="branch_id" value="2"/>
            <column name="employee_id" value="3"/>
        </insert>

        <insert tableName="branch_employees">
            <column name="branch_id" value="2"/>
            <column name="employee_id" value="4"/>
        </insert>
    </changeSet>
</databaseChangeLog>
